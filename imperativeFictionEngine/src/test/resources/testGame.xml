      name="testGame" author="Asier Alkorta" enterprise="None"
      language="English" licensing="GPL v3" version="0.1-alpha" year="2015">
    <definition>
        <genericActions>
            <action name="go">
                <synonyms>
                    <word value="walk"/>
                    <word value="move"/>
                    <word value="run"/>
                </synonyms>
            </action>
            <action name="use">
                <synonyms>
                    <word value="manipulate"/>
                </synonyms>
            </action>
            <action name="talk to">
                <synonyms>
                    <word value="chat with"/>
                </synonyms>
            </action>
            <action name="view">
                <synonyms>
                    <word value="check"/>
                    <word value="see"/>
                    <word value="look at"/>
                </synonyms>
            </action>
        </genericActions>
        <locations>
            <location name="mainLocation" description="main description">
